<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="@dimen/dimen_15"/>

    <TextView
        android:id="@+id/receiver_messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/receiver_message_layout"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="@dimen/dimen_15"
        android:paddingBottom="5dp"
        android:text="Receiver messages here"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_toRightOf="@+id/message_profile_image"/>

    <TextView
        android:id="@+id/sender_messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/sender_messages_layout"
        android:paddingStart="15dp"
        android:paddingTop="5dp"
        android:paddingEnd="@dimen/dimen_15"
        android:paddingBottom="5dp"
        android:text="sender messages"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dimen_15"/>

    <TextView
        android:id="@+id/receiver_messages_time"
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="4dp"
        android:text="TextView"
        android:textColor="@color/gray"
        android:textSize="12dp"
        android:layout_below="@+id/receiver_messages"
        android:layout_toRightOf="@+id/message_profile_image"/>

    <TextView
        android:id="@+id/sender_messages_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/gray"
        android:textSize="12dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/sender_messages"/>

</RelativeLayout>