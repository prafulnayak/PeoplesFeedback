<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/five_dp"
    android:padding="@dimen/dimen_15">

    <LinearLayout
        android:id="@+id/constituencyDistrictListLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/district_name_in_view_all_rv"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:text="Constituency district List"
          android:textSize="15sp"
          android:layout_margin="@dimen/five_dp"
          android:textColor="@color/black"/>

        <TextView
            android:id="@+id/num_of_const_in_view_all_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="15"
            android:layout_margin="5dp"
            android:textColor="@color/black"/>
        <ImageButton
            android:id="@+id/viewAllImg"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/ic_expand_more_black_24dp"
           android:layout_marginStart="50dp"
            android:layout_marginTop="@dimen/five_dp"
            android:background="@color/white"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/tagsList"
        android:layout_below="@id/constituencyDistrictListLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/constituencyListdetials"
        android:layout_below="@+id/tagsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>