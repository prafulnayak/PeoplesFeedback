<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.User_profile_Activity"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1000dp">
        <FrameLayout
            android:id="@+id/fl"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@drawable/button_backround"
            android:paddingTop="30dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/current_user_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="Sai"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/current_user_profile_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="Visakhapatnam"
                    android:textSize="14sp"
                    android:layout_below="@+id/current_user_profile_name"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/ic_location_on_black_24dp"
                    />


            </RelativeLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/profile"
                android:layout_gravity="center_horizontal"/>



        </FrameLayout>

      <LinearLayout
          android:id="@+id/ll"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:weightSum="3"
          android:layout_below="@+id/fl"
          android:layout_marginTop="@dimen/dimen_15"
          android:layout_marginStart="32dp"
          android:layout_marginEnd="32dp">

          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical">
              <TextView
                  android:id="@+id/current_user_profile_followers"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="followers"
                 android:layout_gravity="center_horizontal"
                  android:layout_margin="2dp"
                  android:textStyle="bold"
                  android:textColor="@color/black"
                  android:textSize="18sp"/>
              <TextView
                  android:id="@+id/current_user_profile_num_of_followers"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="1234"
                  android:layout_gravity="center_horizontal"
                  android:layout_margin="2dp"
                  android:textColor="@color/black"/>

          </LinearLayout>
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical">
              <TextView
                  android:id="@+id/current_user_profile_following"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="following"
                  android:layout_gravity="center_horizontal"
                  android:layout_margin="2dp"
                  android:textStyle="bold"
                  android:textColor="@color/black"
                  android:textSize="18sp"/>
              <TextView
                  android:id="@+id/current_user_profile_num_of_following"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="1234"
                  android:layout_gravity="center_horizontal"
                  android:layout_margin="2dp"
                  android:textColor="@color/black"/>

          </LinearLayout>

          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical">
              <TextView
                  android:id="@+id/current_user_profile_photos"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="photos"
                  android:layout_gravity="center_horizontal"
                  android:layout_margin="2dp"
                  android:textStyle="bold"
                  android:textColor="@color/black"
                  android:textSize="18sp"/>
              <TextView
                  android:id="@+id/current_user_profile_num_of_photos"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="1234"
                  android:layout_gravity="center_horizontal"
                  android:layout_margin="2dp"
                  android:textColor="@color/black"/>

          </LinearLayout>

      </LinearLayout>

        <Button
            android:id="@+id/current_user_profile_follow_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/ll"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/dimen_15"
            android:background="@drawable/round_background"
            android:textColor="@color/white"
            android:text="follow"
            android:textAllCaps="false"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_below="@+id/current_user_profile_follow_button">

            <ImageButton
                android:id="@+id/tag_gridViewImages"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@drawable/ic_view_quilt_primary_24dp" />
            <View
                android:id="@+id/viewll"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#9b9a9a"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@drawable/ic_view_list_black_24dp" />
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9b9a9a"
            android:layout_above="@+id/linearLayout" />
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#9b9a9a"
            android:layout_below="@+id/linearLayout" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/profile_tag_gridImages_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/view2"/>

    </RelativeLayout>


</ScrollView>