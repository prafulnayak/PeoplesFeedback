<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

       <TextView
           android:id="@+id/district_name_in_tag_list"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="visakhapatnam"
           android:textSize="10sp"
           android:layout_marginTop="8dp"
           android:layout_gravity="center"/>

        <TextView
            android:id="@+id/municipality_tag_tag_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GVMC"
            android:gravity="center"
            android:padding="@dimen/five_dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/tag_rating_in_tag_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="%"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>



        <RatingBar
            android:id="@+id/tag_rating"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="5"
            android:progressTint="@color/colorPrimaryDark"
            android:layout_marginStart="10dp"
            android:isIndicator="true" />
        <TextView
            android:id="@+id/votes_for_tag_in_tag_List"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="12sp"
            android:text="Votes"
            android:background="@color/colorPrimaryDark"
           android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:gravity="center"/>

    </LinearLayout>

</android.support.v7.widget.CardView>